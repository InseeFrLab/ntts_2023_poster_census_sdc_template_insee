%=======================
% New block
%=======================

\newenvironment<>{problock}[1]{%
  \begin{actionenv}#2%
      \def\insertblocktitle{#1}%
      \par%
      \mode<presentation>{%
        \setbeamercolor{block title}{fg=blueinsee,bg=lightyellow}
       \setbeamercolor{block body}{fg=black,bg=lightyellow}
       \setbeamercolor{itemize item}{fg=blueinsee}
       % \setbeamertemplate{itemize item}[triangle]
     }%
      \usebeamertemplate{block begin}}
    {\par\usebeamertemplate{block end}\end{actionenv}}


\setbeamertemplate{problock begin}
{
  \begin{beamercolorbox}[colsep*=0ex,dp=2ex,center]{problock title}
    \vskip0pt
    \usebeamerfont{block example title}\insertblocktitle
    \vskip-1.25ex
    \begin{beamercolorbox}[colsep=0.025ex]{block example separator}\end{beamercolorbox}
  \end{beamercolorbox}
  {\parskip0pt\par}
  \usebeamerfont{block example body}
  \vskip-0.5ex
  \begin{beamercolorbox}[colsep*=0ex]{problock body}
  \justifying
  \begin{adjustwidth}{1ex}{1ex}
  \setlength{\parskip}{1ex}
  \vskip-2ex
}
\setbeamertemplate{problock end}
{
  \end{adjustwidth}
  \vskip1ex
  \end{beamercolorbox}
  \vskip0pt
  \vspace*{2ex}
}

\newenvironment<>{backblock}[1]{%
  \begin{actionenv}#2%
